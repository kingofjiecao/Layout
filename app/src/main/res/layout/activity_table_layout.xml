<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
             <Button
                 android:id="@+id/tl_btn0"
                 android:layout_width="150dp"
                 android:layout_height="wrap_content"
                 android:text="第一个Button"/>
             <Button android:id="@+id/tl_btn1"
                 android:layout_width="150dp"
                 android:layout_height="wrap_content"
                 android:text="第二个Button"
                  android:layout_marginLeft="10dp"/>
         </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
             <Button
                 android:id="@+id/tl_btn2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:text="第三个Button" />

        <TableRow>
        <Button
            android:id="@+id/tl_btn3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="第四个Button" />
         </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/tl_btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="20sp"
        android:layout_marginTop="250dp"
        />

</LinearLayout>